.black
  %h1.center-text CONTACT US
  -if flash[:errors]
    %ul.alert.alert-warning
      -flash[:errors].each do |e|
        %li=e
  .container
    =form_for @message, data: { turbo: false } do |f|
      .row.my-2
        .col-md-6
          =f.label :contact_name, 'Name'
          =f.text_field :contact_name
        .col-md-6
          =f.label :contact_email, 'Email'
          =f.text_field :contact_email
      .row.my-2
        .col-md-6
          =f.label :message_subject, 'Subject'
          =f.text_field :message_subject
        .col-md-6
          =f.label :contact_phone, 'Phone'
          =f.text_field :contact_phone
      .my-2
        =f.label :message_body, "message"
        =f.text_area :message_body
      .col-md-1
        =f.submit 'Send', class: 'btn btn-dark'
%br
